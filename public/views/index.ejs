              <div class="game-result">
                <span class="home-team"><%= game.home %></span>
                <span class="away-team"><%= game.away %></span>
                <% if (game.result !== 'vs') { %>
                  <span class="result <%= game.win === 'win' ? 'text-success' : game.win === 'loss' ? 'text-danger' : '' %>">
                    <%= game.result %>
